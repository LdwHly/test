<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:text="5555"
                android:padding="20dp"
                android:layout_height="wrap_content" />
            <com.ldw.test.socketclienttest.event.CListView
                android:id="@+id/ll_list"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp" />

            <com.ldw.test.socketclienttest.event.ParentsView1
                android:id="@+id/pv_parents_1"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:background="#00ff00">

                <com.ldw.test.socketclienttest.event.ParentsView2
                    android:id="@+id/pv_parents_2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:background="@color/colorPrimary">

                    <com.ldw.test.socketclienttest.event.ChildView1
                        android:id="@+id/cv_1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/colorPrimary"
                        android:visibility="gone" />

                    <com.ldw.test.socketclienttest.event.ChildView2
                        android:id="@+id/cv_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="#80ff0000" />
                </com.ldw.test.socketclienttest.event.ParentsView2>
            </com.ldw.test.socketclienttest.event.ParentsView1>
        </LinearLayout>
    </ScrollView>
</LinearLayout>